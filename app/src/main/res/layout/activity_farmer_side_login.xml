<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anmol.efarming.farmer_side_login">


    <TextView
        android:id="@+id/quantity"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:gravity="center"
        android:text="Quantity"
        android:textColor="#000080"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:text="Rate Per Unit Quintal"
        android:textStyle="bold"
        android:textColor="#000080"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/Description"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:text="Discription"
        android:textStyle="bold"
        android:textColor="#000080"
        android:textSize="15dp"/>



    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:hint="Input The Quantity"
        android:gravity="center"
        android:textColorHint="#000080"
        android:textColor="#000080"
        android:id="@+id/quantityedittext" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"
        android:hint="Input The Rate"
        android:gravity="center"
        android:textColorHint="#000080"
        android:textColor="#000080"
        android:id="@+id/rateedittext"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="150dp"
        android:hint="Input The Discription"
        android:gravity="center"
        android:textColorHint="#000080"
        android:textColor="#000080"
        android:id="@+id/descriptionedittext"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionedittext"
        android:layout_marginTop="22dp">

        <ImageView
            android:id="@+id/Gallery"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:padding="10dp"
            app:srcCompat="@drawable/gallery" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="440dp"
        android:background="#000080"></View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textStyle="bold"
        android:layout_marginTop="450dp"
        android:background="#138808"
        android:textColor="#ffffff"
        android:textSize="25dp"/>


</RelativeLayout>
